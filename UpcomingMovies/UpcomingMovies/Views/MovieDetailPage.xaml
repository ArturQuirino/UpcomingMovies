<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpcomingMovies.Views.MovieDetailPage"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout Spacing="6" Padding="15">
            <Image Source="{Binding Item.PosterPath}"
               HeightRequest="300"/>
            <Label Text="Title:" FontSize="Medium" />
            <Label Text="{Binding Item.Title}" FontSize="Small" Margin="0, 0, 0, 10"/>
            <Label Text="Overview:" FontSize="Medium" />
            <Label Text="{Binding Item.Overview}" FontSize="Small" Margin="0, 0, 0, 10"/>
            <Label Text="Genre:" FontSize="Medium" />
            <Label Text="{Binding Item.GenreNames}" FontSize="Small" Margin="0, 0, 0, 10"/>
            <Label Text="Release Date:" FontSize="Medium" />
            <Label Text="{Binding Item.ReleaseDate}" FontSize="Small"/>
        </StackLayout>
    </ScrollView>
</ContentPage>